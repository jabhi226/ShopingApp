<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShopingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--        <item name="colorPrimary">@color/mossy_beach</item>-->
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <item name="snackbarButtonStyle">@style/MaterialSnackbarTextButtonTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/white_as_haven</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#0a5c0b</item>
        <item name="android:letterSpacing">0.05</item>
        <!--        <item name="android:textAllCaps">false</item>-->
    </style>

    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/nobal_black</item>
    </style>

    <style name="Theme.ShopingApp" parent="Base.Theme.ShopingApp">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/work_sans_regular</item>
        <item name="fontFamily">@font/work_sans_regular</item>
    </style>

    <style name="your_shoppi">
        <item name="android:textSize">19sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>